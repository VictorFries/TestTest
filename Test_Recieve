#include <SPI.h>
#include <RF24.h>
#include <Servo.h>
#include <SoftwareSerial.h>

Servo index;
Servo middle;
Servo ring;
Servo pinkie;
SoftwareSerial phone(10,11);
RF24 receive(A0,A1);
int currentState=0;
int lastState=0;

void setup() {
index.attach(9);  
middle.attach(6);
ring.attach(5);
pinkie.attach(3);
 byte address[][6]={"Node1"};
 receive.openReadingPipe(1,address[0]);
 receive.startListening();
}
int arr[]={};
void loop() {
  if(receive.available())
  {
    while(receive.available())
    {
      receive.read(&arr,sizeof(arr));
    }
  }
  index.write(arr[0]);
  middle.write(arr[1]);
  ring.write(arr[2]);
  pinkie.write(arr[3]);





















  
}
